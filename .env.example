# Your Discord user token (from browser dev tools)
# To get it: Open Discord Web → F12 → Network tab → find a request → copy "authorization" header value
DISCORD_TOKEN=your_token_here

# The channel ID where the target bot lives
# Right-click a channel → Copy Channel ID (enable Developer Mode in Discord settings)
CHANNEL_ID=1234567890

# The target bot's user ID (to identify its replies)
# Right-click the bot → Copy User ID
TARGET_BOT_ID=1234567890

# How long to wait for the bot to reply (milliseconds)
REPLY_TIMEOUT=15000

# Run browser in headless mode (true/false)
# Set to false to watch the browser in action (useful for debugging)
HEADLESS=true

# --- Discord slash-command bot ---
DISCORD_BOT_TOKEN=your_bot_token_here
DISCORD_CLIENT_ID=your_client_id_here

# --- More Rate Limiting ---
# Please keep this on, filters are changing their APIs because people abuse it.

# Rate limiting: max URL checks per user per minute (set to false to disable)
BOT_RATE_LIMIT=true
BOT_RATE_LIMIT_MAX=100

# Web rate limiting: max URL checks per IP per minute (set to false to disable)
WEB_RATE_LIMIT=true
WEB_RATE_LIMIT_MAX=100
